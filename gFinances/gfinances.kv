<Manager>:
    Menu:
        name: 'menu'
    Finances:
        name: 'finances'
    Receivement:
        name: 'receivement'
<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: '50sp', '200sp', '50sp', '200sp'
        spacing: '100sp'
        Buttons:
            text: 'To Enter'
            on_release: app.root.current = 'finances'
        Buttons:
            text: 'Quit'
            on_release: app.stop()
<Finances>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Finances'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Menu'
                    on_release: app.root.current = 'menu'
        BoxLayout:
            orientation: 'vertical'
            padding: '50sp', '150sp', '50sp', '150sp'
            spacing: '50sp'
            Label:
                text: '0'
            BoxLayout:
                Label:
                    text: '0'
                Label:
                    text: '0'
            BoxLayout:
                spacing: '50sp'
                Buttons:
                    text: 'Receivement'
                    on_release: app.root.current = 'receivement'
                Buttons:
                    text: 'Expenses'
            BoxLayout:
                padding: '10sp', '2sp', '10sp', '2sp'
                Buttons:
                    text: 'Refactor Base Value'
<Receivement>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    text: 'Receivement'
                    on_release: app.root.current = 'finances'
                ActionButton:
                    text: 'Menu'
                    on_release: app.root.current = 'menu'
        ScrollView:
            BoxLayout:
                id: scroll
                orientation: 'vertical'
                padding: '50sp', '50sp', '50sp', '50sp'
                spacing: '30sp'
                size_hint_y: None
                height: self.minimum_height
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '30sp'
                    size_hint_y: None
                    height: '100sp'
                    Label:
                        text: 'Type'
                    TextInput:
                        multiline: True
                BoxLayout:
                    orientation: 'vertical'
                    padding: '0sp', '50sp', '0sp', '50sp'
                    spacing: '80sp'
                    size_hint_y: None
                    height: '200sp'
                    Label:
                        text: 'Transaction Date'
                    BoxLayout:
                        spacing: '20sp'
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: '70sp'
                            Label:
                                text: 'Day'
                            TextInput:
                                multiline: False
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: '70sp'
                            Label:
                                text: 'Month'
                            TextInput:
                                multiline: False
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: '70sp'
                            Label:
                                text: 'Year'
                            TextInput:
                                multiline: False
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '30sp'
                    size_hint_y: None
                    height: '150sp'
                    Buttons:
                        text: 'Save'
                    Buttons:
                        text: 'Done'
                        on_release: root.Return()
