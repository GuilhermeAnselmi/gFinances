<Manager>:
    Menu:
        name: 'menu'
    Finances:
        name: 'finances'
    Receivement:
        name: 'receivement'
    Expense:
        name: 'expense'
<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: '50dp', '200dp', '50dp', '200dp'
        spacing: '40dp'
        canvas:
            Color:
                rgba: 0.12, 0.12, 0.12, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Image:
            source: 'image/roi.png'
            size_hint_y: None
            height: '100dp'
            allow_stretch: True
        Buttons:
            text: 'To Enter'
            on_release: app.root.current = 'finances'
        Buttons:
            text: 'Quit'
            on_release: app.stop()
<Finances>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.12, 0.12, 0.12, 1
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            canvas:
                Color:
                    rgba: 0.1, 0.1, 0.5, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            ActionView:
                ActionPrevious:
                    title: 'Finances'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Menu'
                    on_release: app.root.current = 'menu'
        BoxLayout:
            orientation: 'vertical'
            padding: '50dp', '150dp', '50dp', '150dp'
            spacing: '30dp'
            Image:
                source: 'image/roi.png'
                size_hint_y: None
                height: '100dp'
                allow_stretch: True
            Label:
                id: lblTotal
                text: '0'
            BoxLayout:
                Label:
                    id: lblReceivement
                    text: '0'
                Label:
                    id: lblExpense
                    text: '0'
            BoxLayout:
                spacing: '15dp'
                Buttons:
                    text: 'Receivements'
                    on_release: app.root.current = 'receivement'
                Buttons:
                    text: 'Expenses'
                    on_release: app.root.current = 'expense'
            BoxLayout:
                spacing: '15dp'
                Buttons:
                    text: 'All Received'
                Buttons:
                    text: 'All Expenses'
<Receivement>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.12, 0.12, 0.12, 1
            Rectangle:
                size: self.size
                pos: self.pos
        ScrollView:
            BoxLayout:
                id: scroll
                orientation: 'vertical'
                padding: '50dp', '50dp', '50dp', '50dp'
                spacing: '30dp'
                size_hint_y: None
                height: self.minimum_height
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '30dp'
                    size_hint_y: None
                    height: '100dp'
                    Label:
                        text: 'Description'
                    TextInput:
                        id: txtDescription
                        multiline: True
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '30dp'
                    size_hint_y: None
                    height: '100dp'
                    Label:
                        text: 'Value'
                    TextInput:
                        id: txtValue
                        multiline: False
                        input_filter: 'float'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '0dp', '50dp', '0dp', '50dp'
                    spacing: '80dp'
                    size_hint_y: None
                    height: '200dp'
                    Label:
                        text: 'Transaction Date'
                    BoxLayout:
                        spacing: '20dp'
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: '70dp'
                            Label:
                                text: 'Day'
                            TextInput:
                                id: txtDay
                                multiline: False
                                input_filter: 'int'
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: '70dp'
                            Label:
                                text: 'Month'
                            TextInput:
                                id: txtMonth
                                multiline: False
                                input_filter: 'int'
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: '70dp'
                            Label:
                                text: 'Year'
                            TextInput:
                                id: txtYear
                                multiline: False
                                input_filter: 'int'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '30dp'
                    size_hint_y: None
                    height: '150dp'
                    Buttons:
                        text: 'Save'
                        on_release: root.Save()
                    Buttons:
                        text: 'Done'
                        on_release: root.Return()
